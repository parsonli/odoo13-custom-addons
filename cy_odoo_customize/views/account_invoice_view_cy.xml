                </xpath>
                <xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>
                </xpath>
                <xpath expr="//notebook/page/field/tree/field[@name='product_id']" position="attributes">
